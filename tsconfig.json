{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"lib": ["es2022"]
	},
	"include": ["src/**/*", "const.ts"]
}
